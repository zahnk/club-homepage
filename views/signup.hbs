<h1>Signup</h1>

<form id="form" action="/signup" method="POST">
<label for="firstname">Vorname</label>
    <input type="text" name="firstname" placeholder="Vorname" required>
    
<br><br>
<label for="lastname">Nachname</label>
    <input type="text" name="lastname" placeholder="Nachname" required>
    
<br><br>

    <label for="email">Email-Address</label>
    <input type="email" name="email" placeholder="your-email@something.com" required>
<br><br>
    <label for="password">Password</label>
    <input id="myPassword" type="password" name="password" placeholder="********" value="" required>
    <!--input id="myPassword" type="password" name="" value=""-->
<br><br>
    <label for="username">Username</label>
    <input type="text" name="username" placeholder="Your full username" required>
<br><br>
<label for="address">Adresse </label>
    <textarea name="address" > </textarea>
    
<br><br>

<br><br>
    <button type="submit">Benutzerkonto anlegen</button>
  </form>
<br>
  {{#if errorMessage}}
    <div class="error-message">{{ errorMessage }}</div>
  {{/if}}
